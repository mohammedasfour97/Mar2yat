<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical">

                <TextView
                    android:id="@+id/toolbar_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_17sdp" />

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_point_to_right"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_15sdp"/>
            </LinearLayout>

        </android.support.v7.widget.Toolbar>


        <TextView
            android:id="@+id/dd_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="@string/add_subject"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/colorPrimary"/>

        <View
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_3sdp"
            android:layout_gravity="right"
            android:background="@color/colorPrimary"
            android:layout_margin="@dimen/_10sdp"/>


        <LinearLayout
            android:id="@+id/usercode_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_category_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="@string/main_category"
                android:textSize="@dimen/_15sdp" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/main_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:layout_gravity="right"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/white_solid__accent_stroke" />


        </LinearLayout>

        <TextView
            android:id="@+id/sub_categry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="@string/sub_category"
            android:textSize="@dimen/_15sdp" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/sub_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/white_solid__accent_stroke"
            android:padding="@dimen/_5sdp" />

        <TextView
            android:id="@+id/address_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="@string/address"
            android:textSize="@dimen/_15sdp" />

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_31sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/white_solid__accent_stroke"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/writer_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="@string/writer"
            android:textSize="@dimen/_15sdp" />

        <EditText
            android:id="@+id/writer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_31sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/white_solid__accent_stroke"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/publisher_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="@string/publisher"
            android:textSize="@dimen/_15sdp" />

        <EditText
            android:id="@+id/publisher"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_31sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/white_solid__accent_stroke"
            android:inputType="textEmailAddress"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />


        <TextView
            android:id="@+id/country_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="@string/country"
            android:textSize="@dimen/_15sdp" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:layout_gravity="right"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/white_solid__accent_stroke" />

        <TextView
            android:id="@+id/city_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="@string/city"
            android:textSize="@dimen/_15sdp" />

        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_31sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/white_solid__accent_stroke"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/location_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="@string/location"
            android:textSize="@dimen/_15sdp" />

        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_31sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/white_solid__accent_stroke"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/location_name_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="@string/location_name"
            android:textSize="@dimen/_15sdp" />

        <EditText
            android:id="@+id/location_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_31sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/white_solid__accent_stroke"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />

        <include
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            layout="@layout/layout_add_subject2"/>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>