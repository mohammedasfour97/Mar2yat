<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mriat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="FLAG_GRANT_READ_URI_PERMISSION"/>

    <application
        android:name="com.mriat.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.mriat.Views.HomeActivity"
            android:theme="@style/AppCompat.NoActionBar"></activity>
        <activity
            android:name="com.mriat.Auth.Views.LoginActivity"
            android:theme="@style/AppCompat.NoActionBar">

        </activity>
        <activity android:name="com.mriat.Splash"
            android:theme="@style/AppCompat.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>
        <activity
            android:name="com.mriat.Auth.Views.SignupActivity"
            android:theme="@style/AppCompat.NoActionBar"></activity>
        <activity android:name="com.mriat.Subjects.Views.SubjectDetailsActivity"
            android:theme="@style/AppCompat.NoActionBar"></activity>
        <activity android:name="com.mriat.Subjects.Views.SubjectsActivity"
            android:theme="@style/AppCompat.NoActionBar"/>
        <activity android:name="com.mriat.Subjects.Views.MySubjectsActivity"
            android:theme="@style/AppCompat.NoActionBar"/>

        <activity android:name="com.mriat.TestActivity">

        </activity>

        <activity android:name="com.mriat.Subjects.Views.AddSubjectActivity"
            android:theme="@style/AppCompat.NoActionBar"/>

        <activity android:name="com.mriat.Auth.Views.ForgetPasswordActivity"
            android:theme="@style/AppCompat.NoActionBar"/>
    </application>

</manifest>